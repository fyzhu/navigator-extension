{
  "name": "navigator",
  "version": "0.0.2",
  "manifest_version": 3,
  "description": "generate articale navigator automatically",
  "permissions": [
    "storage",
    "tabs",
    "notifications", 
		"webRequest",
    "history"
  ],
  // "browser_action": {
    // "default_popup": "popup.html"
  // },
  "icons": {
    // "16": "images/16_gray.png",
    // "32": "images/32_gray.png",
    // "48": "images/48.png",
    // "128": "images/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://juejin.cn/book/*","https://es6.ruanyifeng.com/*"],
      "js": ["js/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "js/inject.js" ],
      "matches": ["https://juejin.cn/*","https://es6.ruanyifeng.com/*"]
      // "use_dynamic_url": true
    }
	  
  ]
}